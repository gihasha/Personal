    <script>
        // Navigation Toggle
        const cyberNavToggle = document.getElementById('cyberNavToggle');
        const cyberNavMenu = document.getElementById('cyberNavMenu');

        cyberNavToggle.addEventListener('click', () => {
            cyberNavMenu.classList.toggle('active');
        });

        // Navigation Links
        document.querySelectorAll('.cyber-nav-menu a').forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const targetId = link.getAttribute('href').substring(1);
                
                // Hide all sections except hero
                document.querySelector('.cyber-hero').style.display = 'none';
                document.querySelectorAll('section:not(.cyber-hero)').forEach(section => {
                    section.style.display = 'none';
                });
                
                // Show target section
                if (targetId === 'home') {
                    document.querySelector('.cyber-hero').style.display = 'flex';
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                } else {
                    document.getElementById(targetId).style.display = 'block';
                    document.getElementById(targetId).scrollIntoView({
                        behavior: 'smooth'
                    });
                }
                
                // Close menu
                cyberNavMenu.classList.remove('active');
            });
        });

        // News Slider
        let cyberCurrentNewsIndex = 0;
        const cyberNewsSlider = document.getElementById('cyberNewsSlider');
        const cyberNewsItems = document.querySelectorAll('.cyber-news-item');
        const cyberTotalNews = cyberNewsItems.length;
        const cyberIndicators = document.querySelectorAll('.cyber-news-indicator');

        document.getElementById('cyberNextNews').addEventListener('click', () => {
            cyberCurrentNewsIndex = (cyberCurrentNewsIndex + 1) % cyberTotalNews;
            updateCyberNewsSlider();
        });

        document.getElementById('cyberPrevNews').addEventListener('click', () => {
            cyberCurrentNewsIndex = (cyberCurrentNewsIndex - 1 + cyberTotalNews) % cyberTotalNews;
            updateCyberNewsSlider();
        });

        function updateCyberNewsSlider() {
            cyberNewsSlider.style.transform = `translateX(-${cyberCurrentNewsIndex * 100}%)`;
            
            // Update indicators
            cyberIndicators.forEach((indicator, index) => {
                if (index === cyberCurrentNewsIndex) {
                    indicator.classList.add('active');
                } else {
                    indicator.classList.remove('active');
                }
            });
        }

        // Clickable indicators
        cyberIndicators.forEach((indicator, index) => {
            indicator.addEventListener('click', () => {
                cyberCurrentNewsIndex = index;
                updateCyberNewsSlider();
            });
        });

        // Auto-rotate news
        let cyberNewsInterval = setInterval(() => {
            cyberCurrentNewsIndex = (cyberCurrentNewsIndex + 1) % cyberTotalNews;
            updateCyberNewsSlider();
        }, 5000);

        // Pause on hover
        const cyberNewsContainer = document.querySelector('.cyber-news-container');
        cyberNewsContainer.addEventListener('mouseenter', () => {
            clearInterval(cyberNewsInterval);
        });

        cyberNewsContainer.addEventListener('mouseleave', () => {
            cyberNewsInterval = setInterval(() => {
                cyberCurrentNewsIndex = (cyberCurrentNewsIndex + 1) % cyberTotalNews;
                updateCyberNewsSlider();
            }, 5000);
        });

        // Dark/Light Mode Toggle
        document.getElementById('cyberDarkModeBtn').addEventListener('click', () => {
            document.body.classList.add('dark-mode');
            document.body.classList.remove('light-mode');
            document.getElementById('cyberDarkModeBtn').classList.add('active');
            document.getElementById('cyberLightModeBtn').classList.remove('active');
        });

        document.getElementById('cyberLightModeBtn').addEventListener('click', () => {
            document.body.classList.add('light-mode');
            document.body.classList.remove('dark-mode');
            document.getElementById('cyberLightModeBtn').classList.add('active');
            document.getElementById('cyberDarkModeBtn').classList.remove('active');
        });

        // Form Submission
        document.getElementById('cyberMessageForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const email = document.getElementById('cyberEmail').value;
            const whatsapp = document.getElementById('cyberWhatsapp').value;
            const name = document.getElementById('cyberName').value;
            const message = document.getElementById('cyberMessage').value;
            
            // Here you would typically send this data to your server
            console.log({ email, whatsapp, name, message });
            
            // Simulate sending to dasunmax08@gmail.com
            alert('Message transmitted successfully to dasunmax08@gmail.com!');
            e.target.reset();
        });

        document.getElementById('cyberDirectMessageForm').addEventListener('submit', (e) => {
            e.preventDefault();
            const email = document.getElementById('cyberDirectEmail').value;
            const whatsapp = document.getElementById('cyberDirectWhatsapp').value;
            const message = document.getElementById('cyberDirectMessage').value;
            
            console.log({ email, whatsapp, message });
            alert('Direct message transmitted successfully to dasunmax08@gmail.com!');
            e.target.reset();
        });

