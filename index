            }
        };

        function updateLanguage(lang) {
            const data = languageData[lang];
            
            // Update navigation
            document.querySelectorAll('.cyber-nav-menu a').forEach((link, index) => {
                const texts = [data.home, data.news, data.skills, data.services, data.sendMessage, data.contact, data.settings];
                if (index < texts.length) {
                    link.textContent = texts[index];
                }
            });
            
            // Update hero section
            document.querySelector('.cyber-hero h1').textContent = data.heroTitle;
            document.querySelector('.cyber-hero p').textContent = data.heroDesc;
            
            // Update section titles
            document.querySelector('.cyber-news .cyber-section-title').textContent = data.newsTitle;
            document.querySelector('.cyber-contact .cyber-section-title').textContent = data.contactTitle;
            document.querySelector('.cyber-channels .cyber-channel-title').textContent = data.channelTitle;
            document.querySelector('.cyber-skills .cyber-section-title').textContent = data.skillsTitle;
            document.querySelector('.cyber-services .cyber-section-title').textContent = data.servicesTitle;
            document.querySelector('#send-message .cyber-section-title').textContent = data.messageTitle;
            document.querySelector('#contact .cyber-section-title').textContent = data.contactMatrix;
            document.querySelector('#settings .cyber-section-title').textContent = data.settingsTitle;
            
            // Update buttons
            document.getElementById('cyberDarkModeBtn').textContent = data.darkMode;
            document.getElementById('cyberLightModeBtn').textContent = data.lightMode;
            document.querySelector('.cyber-back-btn').innerHTML = `<i class="fas fa-arrow-left"></i> ${data.return}`;
        }

        document.querySelectorAll('.cyber-language-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                const lang = e.target.getAttribute('data-lang');
                
                // Remove active class from all buttons
                document.querySelectorAll('.cyber-language-btn').forEach(b => {
                    b.classList.remove('active');
                });
                
                // Add active class to clicked button
                e.target.classList.add('active');
                
                // Update language
                updateLanguage(lang);
            });
        });

        // Audio Controls
        const cyberAudio = document.getElementById('cyberAudio');
        const cyberAudioToggle = document.getElementById('cyberAudioToggle');
        let isAudioPlaying = false;

        cyberAudioToggle.addEventListener('click', () => {
            if (isAudioPlaying) {
                cyberAudio.pause();
                cyberAudioToggle.innerHTML = '<i class="fas fa-volume-mute"></i>';
            } else {
                cyberAudio.play();
                cyberAudioToggle.innerHTML = '<i class="fas fa-volume-up"></i>';
            }
            isAudioPlaying = !isAudioPlaying;
        });

        // Initialize dark mode as default
        document.body.classList.add('dark-mode');
        document.getElementById('cyberDarkModeBtn').classList.add('active');
    </script>
</body>
</html>